%StdButtonBar(search,defaults,vieweditor,print,extended,upload,views)%
<input type=hidden name=OP value="">

<script language=JavaScript>
function SwitchExt()
{
   var blk=window.document.getElementById("ext");
   if (blk.style.display=="none"){
      blk.style.display="block";
      blk.style.visibillity="visible";
   }
   else{
      blk.style.display="none";
      blk.style.visibillity="hidden";
   }
   return(undefined);
}

function DoViewEditor()
{
   document.forms[0].action='ViewEditor';
   document.forms[0].target='Result';
   document.forms[0].submit();

   return(undefined);
}
function DoSearch()
{
   var d;
   document.forms[0].elements['OP'].value='Search';
   document.forms[0].action='Result';
   document.forms[0].target='Result';
   d=frames['Result'].document;
   d.close();
   d.open();
   d.write("<html>");
   d.write("<link rel=stylesheet type=\"text/css\" "+
           "href=\"../../base/load/default.css\">");
   d.write("<body>");
   d.write("<table border=1 width=100% height=100%>");
   d.write("<tr><td align=center>");
   d.write("<img src=\"../../base/load/searching.gif\">");
   d.write("</td></tr>");
   d.write("</table>");
   d.write("</body>");
   d.write("</html>");
   document.forms[0].submit();
   return(undefined);
}
function SaveDefaults()
{
   document.forms[0].elements['OP'].value='SaveDefaults';
   document.forms[0].action='Main';
   document.forms[0].target='_self';
   document.forms[0].submit();

   return(undefined);
}
</script>



